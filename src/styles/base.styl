// 优化显示
body {
  color: rgba(0, 0, 0, .85);
  font-size: 14px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
  -webkit-font-smoothing: antialiased;
  -webkit-tap-highlight-color: transparent;
}

ul {
  margin: 0;
  padding: 0;
  list-style: none;
}
ul li {
  margin: 0;
  padding: 0;
  list-style: none;
}

.bin-json-editor {
  height: 100%;
  border: 1px solid #eee;
  position: relative;
}

.bin-json-editor .CodeMirror {
  height: auto;
  min-height: 150px;
  max-height: 400px;
}
.bin-json-editor .CodeMirror-scroll {
  min-height: 150px;
  max-height: 400px;
}

.bin-json-editor .cm-s-rubyblue span.cm-string {
  color: #F08047;
}

